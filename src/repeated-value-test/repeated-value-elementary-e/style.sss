.container 
    --base-form-padding: 0.3em
    --base-border: none
    --base-width: 20em
    display: block
    padding: var(--base-form-padding)
    border: var(--base-border)
    width: var(--base-width)

label 
    margin-right: 0.3em
    font-weight: bold
    color: #2f6fad

input[type=text] 
    width: 12em
